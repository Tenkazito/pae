    </div>
    <br>
    <br>
    <div class="cuadro">

        <% if (typeof msg != "undefined") { %>
            <p><%= msg %></p>
        <% } %>

        <% if (typeof nombres != "undefined") { %>
            <table border="1" class="table table-striped">
                <tr>
                    <th>Documento</th>
                    <th>Nombre</th>
                    <th>Grado</th>
                </tr>
                <% for (var i = 0; i < largo; i++) { %>
                    <tr>
                        <td><%= nombres[i].documento_estudiante %></td>
                        <td><%= nombres[i].nombre_estudiante %></td>
                        <td><%= nombres[i].grupo %></td>
                    </tr>
                <% } %>
            </table>
        <% } %>

        <% if (typeof cuando != "undefined") { %>
            <p><%= cuando %></p>
        <% } %>

        <% if (typeof results != "undefined") { %>
            <table border="1" class="table table-striped">
                <tr>
                    <th>Documento</th>
                    <th>Nombre</th>
                    <th>Cantidad de recibidos</th>
                </tr>
                <% for (var i = 0; i < largo; i++) { %>
                    <tr>
                        <td><%= results[i].documento_estudiante %></td>
                        <td><%= results[i].nombre_estudiante %></td>
                        <td><%= results[i].cantidad %></td>
                    </tr>
                <% } %>
            </table>
        <% } %>

    </div>
    </body>
</html>